<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/xxDolan"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:src="@drawable/icon_faskes"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/nmpemetaan"
        android:layout_below="@+id/xxDolan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pemetaan"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />



    <TextView
        android:id="@+id/nmfaskes"
        android:layout_below="@+id/nmpemetaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fasilitas Kesehatan"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/nmpekalongan"
        android:layout_below="@+id/nmfaskes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kota Pekalongan"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />

    <com.facebook.login.widget.LoginButton
        android:layout_below="@+id/nmpekalongan"
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_margin="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

    <View android:layout_width="match_parent"
        android:id="@+id/dividerr"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/login_button"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_below="@+id/dividerr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"/>



</RelativeLayout>